{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./",        // Changed from "./src" to "./"
    "outDir": "./dist",

    /* Module System */
    "module": "commonjs",
    "target": "es2018",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Strict Checks */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts"],          // Include all TS files in this folder
  "exclude": ["node_modules", "dist"] // IMPORTANT: Ignore these folders
}